<ol class="posts-list">
{% for post in postslist | reverse %}
  <li class="post-item">
    <a href="{{ post.url | url }}" class="post-title">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    {% if post.data.author %}<span class="post-author">By: {{ post.data.author }}</span> &bull;{% endif %}
    <time class="post-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    {% for tag in post.data.tags %}
      {%- if collections.tagList.indexOf(tag) != -1 -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    {% if post.data.description %}<p>{{ post.data.description }}</p>{% endif %}
  </li>
{% endfor %}
</ol>
